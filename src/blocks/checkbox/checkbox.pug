mixin checkbox(name, description)
  -
    let classes;
    if (attributes && attributes.class) {
      classes = attributes.class;
      delete attributes.class;
    }
    else {
      classes = [];
    }

  label.checkbox(class=classes)
    +field()(type='checkbox', class='checkbox__input')&attributes(attributes)
    +checkbox__box
    =name
    if description
      p.checkbox__description= description