mixin checkbox(name, label, description)
  -
    let classes;
    if (attributes && attributes.class) {
      classes = attributes.class;
      delete attributes.class;
    }
    else {
      classes = [];
    }

  label.checkbox(class=classes)
    +input()(type='checkbox', class='checkbox__input', name=name)&attributes(attributes)
    +checkbox__box
    span.checkbox__label= label
    if description
      span.checkbox__description= description