mixin font-sample__item(label, text)

  -
    const classes = {
      'H1': 'text_level_h1',
      'H2': 'text_level_h2',
      'H3': 'text_level_h3',
      'Body': ''
    };

  li.font-sample__item&attributes(attributes)
    .font-sample__label(class=classes[label])
      =label
    .font-sample__text(class=classes[label])
      =text