mixin list__item(item, type, radioName)
  li.list__item(class=`list__item_type_${type}`)&attributes(attributes)
    case type
      when 'list': +list__item_type_list(item)
      when 'icon': +list__item_type_icon(item)
      when 'checkbox'
      when 'radio'
      when 'toggle':  +list__item_type_checkbox(item, type)