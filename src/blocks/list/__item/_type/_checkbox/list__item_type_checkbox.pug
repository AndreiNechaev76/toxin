include dependencies.pug
mixin list__item_type_checkbox(item, type)
  -
    let name, label, description;
    if (typeof item === 'string') {
      label = item;
    }
    else if (Array.isArray(item)) {
      [name, label, description] = item;
    }
    else {
      [name, label, description] = [item.name, item.label, item.description];
      delete item.name, item.label, item.description;
      Object.assign(attributes, item);
    }
  +checkbox(name, label, description, type)&attributes(attributes)